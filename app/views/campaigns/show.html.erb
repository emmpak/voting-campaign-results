<h1><%= @campaign.name %></h1>
<h2>Candidates</h2>

<table class="table-bordered">
  <thead>
    <tr>
      <th>Choice</th>
      <th>Valid Votes</th>
      <th>Invalid Votes</th>
    </tr>
  </thead>
  <tbody>
    <% @campaign.vote_results.each do |choice, results| %>
      <tr>
        <td><%= choice %></td>
        <td><%= results[:valid] %></td>
        <td><%= results[:invalid] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', campaigns_path %>
